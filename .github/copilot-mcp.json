{
  "$schema": "https://modelcontextprotocol.io/schema/mcp-config.schema.json",
  "version": "1.0.0",
  "description": "MCP server configuration for code-scanner-poc project",
  "servers": {
    "filesystem": {
      "enabled": true,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "description": "Provides access to project files and structure",
      "allowedPaths": [
        "${workspaceRoot}/src",
        "${workspaceRoot}/docs",
        "${workspaceRoot}/.github"
      ],
      "operations": ["read", "list"]
    },
    "github": {
      "enabled": true,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "GitHub integration for issues, PRs, and repository management",
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      },
      "repository": "jblascoisazac/code-scanner-poc"
    },
    "git": {
      "enabled": true,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "--repository", "${workspaceRoot}"],
      "description": "Git operations and repository history"
    },
    "memory": {
      "enabled": true,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory across AI sessions for project context"
    }
  },
  "globalSettings": {
    "timeout": 30000,
    "retries": 3,
    "logLevel": "info"
  },
  "permissions": {
    "filesystem": {
      "allowRead": true,
      "allowWrite": false,
      "allowDelete": false
    },
    "github": {
      "allowIssueCreation": true,
      "allowPRCreation": true,
      "allowComments": true
    },
    "git": {
      "allowCommit": false,
      "allowPush": false,
      "allowRead": true
    }
  }
}
